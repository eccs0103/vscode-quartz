{
	"name": "quartz-language",
	"displayName": "Quartz language",
	"description": "Complete language support for the Quartz programming language including syntax highlighting, formatting, IntelliSense, and more.",
	"version": "0.4.0-preview.1",
	"publisher": "eccs0103",
	"repository": {
		"type": "git",
		"url": "https://github.com/eccs0103/vscode-quartz.git"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.82.0"
	},
	"categories": [ 
		"Programming Languages",
		"Formatters",
		"Snippets",
		"Linters"
	],
	"keywords": [
		"quartz",
		"qrz",
		"syntax",
		"highlighting",
		"formatter",
		"language-server"
	],
	"activationEvents": [
		"onLanguage:qrz"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "qrz",
				"aliases": [ "Quartz", "Quartz language" ],
				"extensions": [ ".qrz" ],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "qrz",
				"scopeName": "source.qrz",
				"path": "./syntaxes/qrz.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "qrz",
				"path": "./snippets/qrz.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.82.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.0",
		"vscode-languageserver": "^9.0.0",
		"vscode-languageserver-textdocument": "^1.0.0"
	}
}
