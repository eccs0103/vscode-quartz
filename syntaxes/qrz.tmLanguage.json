{
	"name": "Quartz",
	"patterns": [
		{ "include": "#strings" },
		{ "include": "#imports" },
		{ "include": "#keywords" },
		{ "include": "#modifiers" },
		{ "include": "#types" },
		{ "include": "#members" },
		{ "include": "#functions" },
		{ "include": "#variables_const" },
		{ "include": "#numbers" },
		{ "include": "#punctuation" }
	],
	"repository": {
		"strings": {
			"patterns": [
				{ "name": "string.quoted.double.qrz", "match": "\"[^\"]*\"" }
			]
		},
		"imports": {
			"patterns": [
				{
					"name": "meta.import.qrz",
					"begin": "(use)\\s*(\\{)",
					"beginCaptures": {
						"1": { "name": "keyword.control.import.qrz" },
						"2": { "name": "punctuation.brace.curly.qrz" }
					},
					"end": "(\\})\\s*(from)",
					"endCaptures": {
						"1": { "name": "punctuation.brace.curly.qrz" },
						"2": { "name": "keyword.control.import.qrz" }
					},
					"patterns": [
						{
							"name": "entity.name.type.qrz",
							"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
						},
						{
							"name": "entity.name.function.qrz",
							"match": "\\b[a-z_][a-z0-9_]*\\b"
						},
						{ "include": "#punctuation" }
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{ "name": "keyword.control.qrz", "match": "\\b(for|in|use|from|if|else|return)\\b" }
			]
		},
		"modifiers": {
			"patterns": [
				{ "name": "variable.language.this.qrz", "match": "\\b(this)\\b" },
				{ "name": "storage.modifier.qrz", "match": "\\b(mutable)\\b" }
			]
		},
		"types": {
			"patterns": [
				{ "name": "entity.name.type.qrz", "match": "\\b[A-Z][a-zA-Z0-9_]*\\b" }
			]
		},
		"members": {
			"patterns": [
				{
					"match": "(\\.)([a-z_][a-z0-9_]*)(?=\\s*\\()",
					"captures": {
						"1": { "name": "punctuation.accessor.qrz" },
						"2": { "name": "entity.name.function.method.qrz" }
					}
				},
				{
					"match": "(\\.)([a-z_][a-z0-9_]*)",
					"captures": {
						"1": { "name": "punctuation.accessor.qrz" },
						"2": { "name": "variable.other.readwrite.property.qrz" }
					}
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.qrz",
					"match": "\\b[a-z_][a-z0-9_]*(?=\\s*\\()"
				}
			]
		},
		"variables_const": {
			"patterns": [
				{
					"name": "variable.other.readwrite.qrz",
					"match": "\\b[a-z_][a-z0-9_]*\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{ "name": "constant.numeric.qrz", "match": "\\b-?\\d+(\\.\\d+)?\\b" }
			]
		},
		"punctuation": {
			"patterns": [
				{ "name": "keyword.operator.assignment.qrz", "match": ":" },
				{ "name": "punctuation.terminator.statement.qrz", "match": ";" },
				{ "name": "punctuation.separator.comma.qrz", "match": "," }
			]
		}
	},
	"scopeName": "source.qrz"
}
