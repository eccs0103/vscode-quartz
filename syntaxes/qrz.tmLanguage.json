{
	"name": "Quartz",
	"patterns": [
		{ "include": "#strings" },
		{ "include": "#imports" },
		{ "include": "#keywords" },
		{ "include": "#modifiers" },
		{ "include": "#types" },
		{ "include": "#members" },
		{ "include": "#functions" },
		{ "include": "#variables" },
		{ "include": "#numbers" },
		{ "include": "#operators" },
		{ "include": "#punctuation" }
	],
	"repository": {
		"strings": {
			"patterns": [
				{ "name": "string.quoted.double.qrz", "match": "\"[^\"]*\"" }
			]
		},
		"imports": {
			"patterns": [
				{
					"name": "meta.import.functions.qrz",
					"comment": "Rule for: from Class use { function }",
					"begin": "(from)\\s+([A-Z][a-zA-Z0-9_]*)\\s+(use)\\s+(\\{)",
					"beginCaptures": {
						"1": { "name": "keyword.control.import.qrz" },
						"2": { "name": "entity.name.type.qrz" },
						"3": { "name": "keyword.control.import.qrz" },
						"4": { "name": "punctuation.brace.curly.qrz" }
					},
					"end": "\\}",
					"endCaptures": { "0": { "name": "punctuation.brace.curly.qrz" } },
					"patterns": [
						{ "name": "entity.name.function.qrz", "match": "\\b[a-z_][a-z0-9_]*\\b" },
						{ "include": "#punctuation" }
					]
				},
				{
					"name": "meta.import.types.qrz",
					"comment": "Rule for: from \"string\" use { Type }",
					"begin": "(from)\\s+(\"[^\"]*\")\\s+(use)\\s+(\\{)",
					"beginCaptures": {
						"1": { "name": "keyword.control.import.qrz" },
						"2": { "name": "string.quoted.double.qrz" },
						"3": { "name": "keyword.control.import.qrz" },
						"4": { "name": "punctuation.brace.curly.qrz" }
					},
					"end": "\\}",
					"endCaptures": { "0": { "name": "punctuation.brace.curly.qrz" } },
					"patterns": [
						{ "name": "entity.name.type.qrz", "match": "\\b[A-Z][a-zA-Z0-9_]*\\b" },
						{ "include": "#punctuation" }
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{ "name": "keyword.control.qrz", "match": "\\b(if|else)\\b" },
				{ "name": "keyword.control.qrz", "match": "\\b(while|repeat|for|in)\\b" },
				{ "name": "keyword.control.qrz", "match": "\\b(break|continue)\\b" },
				{ "name": "keyword.control.qrz", "match": "\\b(return)\\b" },
				{ "name": "keyword.control.qrz", "match": "\\b(use|from)\\b" }
			]
		},
		"modifiers": {
			"patterns": [
				{ "name": "variable.language.this.qrz", "match": "\\b(this)\\b" },
				{ "name": "constant.language.qrz", "match": "\\b(true|false)\\b" }
			]
		},
		"types": {
			"patterns": [
				{ "name": "entity.name.type.qrz", "match": "\\b[A-Z][a-zA-Z0-9_]*\\b" }
			]
		},
		"members": {
			"patterns": [
				{
					"match": "(\\.)([a-z_][a-z0-9_]*)(?=\\s*\\()",
					"captures": {
						"1": { "name": "punctuation.accessor.qrz" },
						"2": { "name": "entity.name.function.method.qrz" }
					}
				},
				{
					"match": "(\\.)([a-z_][a-z0-9_]*)",
					"captures": {
						"1": { "name": "punctuation.accessor.qrz" },
						"2": { "name": "variable.other.readwrite.property.qrz" }
					}
				}
			]
		},
		"functions": {
			"patterns": [
				{ "name": "entity.name.function.qrz", "match": "\\b[a-z_][a-z0-9_]*(?=\\s*\\()" }
			]
		},
		"variables": {
			"patterns": [
				{ "name": "variable.other.readwrite.qrz", "match": "\\b[a-z_][a-z0-9_]*\\b" }
			]
		},
		"numbers": {
			"patterns": [
				{ "name": "constant.numeric.qrz", "match": "\\b-?\\d+(\\.\\d+)?\\b" }
			]
		},
		"operators": {
			"patterns": [
				{ "name": "keyword.operator.comparison.qrz", "match": "[=!]=|[<>]={0,2}" },
				{ "name": "keyword.operator.assignment.qrz", "match": ":" }
			]
		},
		"punctuation": {
			"patterns": [
				{ "name": "punctuation.terminator.statement.qrz", "match": ";" },
				{ "name": "punctuation.separator.comma.qrz", "match": "," }
			]
		}
	},
	"scopeName": "source.qrz"
}
