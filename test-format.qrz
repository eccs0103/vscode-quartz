// Test formatting with unary operators and generics

// Unary operators should not have space after
negation Boolean(!true);
positive Number(+42);
negative Number(-100);

// Generics should not have spaces inside < >
array Array<Number>;
optional_array Array<String>?;
nested Generic<Array<Number>>;

// Binary operators should have spaces
sum Number(10 + 20);
difference Number(100 - 50);
product Number(5 * 6);

// Comparison operators
is_greater Boolean(10 > 5);
is_less_or_equal Boolean(5 <= 10);

// Combined unary and binary
result Number(-5 + 10);
combined Boolean(!(5 > 10));
